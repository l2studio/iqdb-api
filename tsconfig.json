{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "outDir": "lib"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
